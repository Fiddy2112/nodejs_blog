<div class="mt-4">
  <h3>Tao khoa hoc</h3>

  <form method="POST" action="/courses/store">
    <div class="mb-3">
      <label for="name" class="form-label">Ten Khoa hoc</label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Mo ta khoa hoc</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
      />
    </div>

    <div class="mb-3">
      <label for="videoId" class="form-label">Video IDc</label>
      <input type="text" class="form-control" id="videoId" name="videoId" />
    </div>

    <div class="mb-3">
      <label for="level" class="form-label">Trinh do khoa hoc</label>
      <input type="text" class="form-control" id="level" name="level" />
    </div>

    <button type="submit" class="btn btn-primary">Them khoa hoc</button>
  </form>
</div>