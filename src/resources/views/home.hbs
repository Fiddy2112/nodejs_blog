<div class="mt-4 container text-center">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4 mt-4">
        <div class="card h-80">
          <a href="/courses/{{this.slug}}">
            <img
              src="{{this.image}}"
              class="card-img-top"
              alt={{this.name}}
            /></a>
          <div class="card-body">
            <a style="text-decoration: none" href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p
              style="text-overflow: ellipsis"
              class="card-text"
            >{{this.description}}</p>
            <a href="#" class="btn btn-primary">Mua khoa hoc</a>
          </div>
        </div>
      </div>
    {{else}}
      <h1>Chua co khoa hoc nao!</h1>
    {{/each}}
  </div>
</div>